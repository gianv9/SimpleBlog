{% extends "layout.twig" %}

{% block content %}
            <h2>New Posts</h2>
            {# si existe una variable llamada errors y contiene algo
            entra en el if #}
            {% if errors %}
              <div class="alert alert-danger">
                <ul>
                  {# para cada input vamos a leer los mensajes #}
                  {% for input, messages in errors %}
                      {# recorremos los mensajes internos para cada input #}
                      {% for message in messages %}
                          <li>
                            {{input}}: {{message}}
                          </li>
                      {% endfor %}
                  {% endfor %}
                </ul>
              </div>
            {% endif %}

            {% if result %}
              <div class="alert alert-success">
              User added Successfully!
              </div>
            {% endif %}

            {# <form action="{{ 'admin/posts/insert' | url }}" method="post"> #}
            <form method="post">
                <div class="form-group">
                  <label for="inputName">Name</label>
                  <input class="form-control" type="text" name="nombre" value="" id="inputname">
                </div>
                <div class="form-group">
                  <label for="inputEmail">Email</label>
                  <input class="form-control" type="text" name="email" value="" id="inputEmail">
                </div>
                <div class="form-group">
                  <label for="inputPassword">Password</label>
                  <input class="form-control" type="password" name="password" value="" id="inputPassword">
                </div>
                <br>
                <input class="btn btn-primary" type="submit" value="Save">
            </form>

{% endblock %}