{% extends "layout.twig" %}

{% block titulo %}
      <h2>New Posts</h2>
{% endblock %}

{% block content %}
            {# si existe una variable llamada errors y contiene algo
            entra en el if #}
            {% if errors %}
                {% include('partials/errors.twig') %}
            {% endif %}

            {% if result %}
              <div class="alert alert-success">
              User added Successfully!
              </div>
            {% endif %}

            {# <form action="{{ 'admin/posts/insert' | url }}" method="post"> #}
            <form method="post">
                <div class="form-group">
                  <label for="inputName">Name</label>
                  <input class="form-control" type="text" name="name" value="" id="inputname">
                </div>
                <div class="form-group">
                  <label for="inputEmail">Email</label>
                  <input class="form-control" type="text" name="email" value="" id="inputEmail">
                </div>
                <div class="form-group">
                  <label for="inputPassword">Password</label>
                  <input class="form-control" type="password" name="password" value="" id="inputPassword">
                </div>
                <br>
                <input class="btn btn-primary" type="submit" value="Save">
            </form>

{% endblock %}