{% extends "layout.twig" %}

{% block content %}
            <h2>New Posts</h2>
            {# si existe una variable llamada errors y contiene algo
            entra en el if #}
            {% if errors %}
              <div class="alert alert-danger">
                <ul>
                  {# para cada input vamos a leer los mensajes #}
                  {% for input, messages in errors %}
                      {# recorremos los mensajes internos para cada input #}
                      {% for message in messages %}
                          <li>
                            {{input}}: {{message}}
                          </li>
                      {% endfor %}
                  {% endfor %}
                </ul>
              </div>
            {% endif %}

            {% if result %}
              <div class="alert alert-success">
              Post added Successfully!
              </div>
            {% endif %}

            <form action="{{ 'admin/posts/insert' | url }}" method="post">
                <div class="form-group">
                  <label for="inputTitle">Title</label>
                  <input class="form-control" type="text" name="title" value="" id="inputTitle">
                </div>
                <textarea class="form-control" name="content" rows="5" cols="10" id="inputContent"></textarea>
                <br>
                <input class="btn btn-primary" type="submit" value="Save">
            </form>

{% endblock %}